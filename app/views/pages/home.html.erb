<div class="container mt-5 text-center">


<h1>Calendar</h1>


<%= month_calendar(events: @consultations) do |date, consultations| %>
    <div class="day">
    <%= date %>
    </div>

        <% consultations.each do |consultation| %>
        <div class="card-header">
            <div class="card-title">
                <%=link_to consultation.title, consultation %>
            </div>
        </div>
            <div class="card-body">
                <p class="card-text">
                    <%= consultation.description %>
                </p>
            </div>
        <div class="card-footer">
        <p class="card-text">
        Start: <%= consultation.start_time.strftime('%A, %B %d, %Y, at %I:%m %p')%>
        </p>
         <p class="card-text">
        End: <%= consultation.end_time.strftime('%A, %B %d, %Y, at %I:%m %p')%>
        </p>
        </div>
    <% end %>
<% end %>
<br><br>
    <%= button_to "Consultations", consultations_path, class:"btn btn-dark", method: :get %>

</div>